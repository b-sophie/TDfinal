    <bottom>
        <VBox spacing="8" padding="10">
            <HBox spacing="8">
                <TextField fx:id="tfTitre" promptText="Titre" />
                <TextField fx:id="tfAuteur" promptText="Auteur" />
                <TextField fx:id="tfStock" promptText="Stock" prefWidth="80" />
                <Button text="Ajouter" onAction="#onAjouter" />
                <Button text="Emprunter" onAction="#onEmprunter" />
                <Button text="Retourner" onAction="#onRetourner" />
