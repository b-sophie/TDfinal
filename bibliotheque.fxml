<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdfinal.BibliothequeController">
    <top>
        <Label text="Gestion de la BibliothÃ¨que" style="-fx-font-size:18px; -fx-padding:10;" />
    </top>

    <center>
        <TableView fx:id="tableLivres" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="colTitre" text="Titre" prefWidth="300" />
                <TableColumn fx:id="colAuteur" text="Auteur" prefWidth="200" />
